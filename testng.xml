<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Framework Test Suite" parallel="methods" thread-count="5" verbose="1">
    
    <listeners>
        <listener class-name="com.enterprise.automation.reporting.listeners.ExtentTestListener"/>
        <listener class-name="com.enterprise.automation.reporting.listeners.EvidenceAttachmentListener"/>
    </listeners>
    
    <test name="All Tests">
        <packages>
            <package name="com.enterprise.automation.tests.*"/>
        </packages>
    </test>
    
</suite>